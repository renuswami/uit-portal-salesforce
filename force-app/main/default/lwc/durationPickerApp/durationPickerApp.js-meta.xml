<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>63.0</apiVersion>
	<isExposed>true</isExposed>
	<targets>
        <!-- Add lightning__FlowScreen to the targets -->
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__RecordPage</target>
        <target>lightning__FlowScreen</target> 
	</targets>

    <!-- This new section configures the component for the Flow Builder -->
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <!-- INPUT property -->
            <property name="cardTitle" type="String" label="Card Title" description="The title displayed at the top of the component."/>
            
            <!-- OUTPUT property -->
            <property name="totalHours" type="String" label="Total Hours Output" role="outputOnly" description="Outputs the final duration in decimal hours."/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>